{
  "compilerOptions": {
    "target": "es5",                    // ECMAScript version to compile to
    "module": "ESNext",                  // Module system
    "outDir": "./dist",                  // Output directory
    "strict": true,                      // Enable strict type checking
    "esModuleInterop": true,             // For compatibility with CommonJS modules
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "moduleResolution": "node"           // Use Node.js module resolution
  },
  "include": ["src/**/*"]               // Include all TypeScript files in src directory
}
